{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "declaration": false,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "plugins": [{ "transform": "ts-transformer-imports" }],
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["src"],
  "exclude": ["node_modules","dist"]
}
